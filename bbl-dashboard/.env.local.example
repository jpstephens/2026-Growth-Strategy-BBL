# Mock Data Mode
# Set to 'true' to use sample data without API credentials (for testing/demo)
# If no API credentials are configured, mock data is used automatically
USE_MOCK_DATA=true

# HubSpot API Configuration
# Create a Private App in HubSpot Settings → Integrations → Private Apps
# Scopes needed: crm.objects.contacts.read, crm.objects.deals.read, crm.objects.calls.read, crm.schemas.deals.read
HUBSPOT_ACCESS_TOKEN=pat-xxx

# Instantly.ai API Configuration
# Get API key from Instantly Settings → Integrations → API
INSTANTLY_API_KEY=xxx

# Alvys API Configuration (OAuth 2.0)
# Get credentials from Alvys Admin Portal → Admin → API Access
ALVYS_CLIENT_ID=xxx
ALVYS_CLIENT_SECRET=xxx
ALVYS_COMPANY_CODE=xxx
